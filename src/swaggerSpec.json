{
  "openapi": "3.0.0",
  "info": {
    "title": "FallTech Endpoint API",
    "version": "3.0.0",
    "description": "Eine RESTful API für das Management von Benutzern, deren Authentifizierung und deren Aktivitäten."
  },
  "servers": [
    {
      "url": "http://10.10.31.11:8000/"
    }
  ],
  "paths": {
    "/": {
      "get": {
        "summary": "Serve the index.html file",
        "responses": {
          "200": {
            "description": "Index.html file is served"
          }
        }
      }
    },
    "/login": {
      "post": {
        "summary": "Login eines Benutzers",
        "description": "Authentifiziert einen Benutzer mit Benutzername und Passwort.",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/LoginData"
              }
            }
          },
          "description": "Anforderungsbody mit den Anmeldedaten des Benutzers."
        },
        "responses": {
          "200": {
            "description": "Anmeldung erfolgreich",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": {
                      "type": "boolean",
                      "description": "Kennzeichnet, ob die Anmeldung erfolgreich war."
                    },
                    "data": {
                      "$ref": "#/components/schemas/Person"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Ungültige Anforderungsdaten: Fehler im JSON-Format oder fehlende Eigenschaften."
          },
          "401": {
            "description": "Anmeldung fehlgeschlagen: Ungültige Anmeldedaten."
          },
          "500": {
            "description": "Anmeldung fehlgeschlagen: Serverfehler."
          }
        }
      }
    },
    "/tagebuch/submit": {
      "post": {
        "summary": "Erstellt neuen Tagebucheintrag",
        "description": "Erstellt einen neuen Tagebucheintrag in der Datenbank.",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/ResourceData"
              }
            }
          },
          "description": "Anforderungsbody mit den Daten für den neuen Tagebucheintrag."
        },
        "responses": {
          "201": {
            "description": "Tagebucheintrag erfolgreich erstellt"
          },
          "400": {
            "description": "Fehlerhafte Anforderung: Ungültiges JSON-Format oder fehlende Eigenschaften."
          },
          "500": {
            "description": "Interner Serverfehler: Tagebucheintrag konnte nicht erstellt werden."
          }
        }
      }
    },
    "/tagebuch/entries": {
      "get": {
        "summary": "Alle Tagebucheinträge abrufen",
        "description": "Liefert alle in der Datenbank gespeicherten Tagebucheinträge.",
        "responses": {
          "200": {
            "description": "Erfolgreich: Liste aller Tagebucheinträge",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "entersData": {
                      "type": "array",
                      "description": "Liste aller EinträgeID-Personen",
                      "items": {
                        "$ref": "#/components/schemas/EntersData"
                      }
                    },
                    "entryData": {
                      "type": "array",
                      "description": "Liste aller Einträge",
                      "items": {
                        "$ref": "#/components/schemas/EntryData"
                      }
                    }
                  }
                }
              }
            }
          },
          "404": {
            "description": "Keine Einträge gefunden: Die Datenbank enthält keine Tagebucheinträge."
          },
          "500": {
            "description": "Interner Serverfehler: Fehler beim Abrufen der Tagebucheinträge."
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "ResourceData": {
        "type": "object",
        "properties": {
          "people": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "description": {
            "type": "string"
          },
          "notes": {
            "type": "string"
          },
          "date": {
            "type": "string",
            "format": "date"
          },
          "duration": {
            "type": "integer"
          }
        },
        "required": ["people", "description", "date", "duration"]
      },
      "LoginData": {
        "type": "object",
        "properties": {
          "username": {
            "type": "string"
          },
          "password": {
            "type": "string"
          }
        },
        "required": ["username", "password"]
      },
      "Person": {
        "type": "array",
        "properties": {
          "username": {
            "type": "string"
          },
          "firstname": {
            "type": "string"
          },
          "lastname": {
            "type": "string"
          },
          "teammember": {
            "type": "integer"
          }
        },
        "required": ["username", "firstname", "lastname", "teammember"]
      },
      "EntersData" : {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer"
          },
          "description": {
            "type": "string"
          },
          "notes": {
            "type": "string"
          },
          "date": {
            "type": "string",
            "format": "date"
          },
          "duration": {
            "type": "integer"
          }
        },
        "required": ["id", "description", "date", "duration"]
      },
      "EntryData" : {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer"
          },
          "username": {
            "type": "string"
          }
        },
        "required": ["id", "username"]
      }
    }
  }
}