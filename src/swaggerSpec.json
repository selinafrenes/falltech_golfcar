{
  "openapi": "3.0.0",
  "info": {
    "title": "FallTech Endpoint API",
    "version": "3.0.0",
    "description": "Eine RESTful API für das Management von Benutzern, deren Authentifizierung und deren Aktivitäten."
  },
  "servers": [
    {
      "url": "http://10.10.31.11:8000/"
    }
  ],
  "paths": {
    "/": {
      "get": {
        "summary": "Serve the index.html file",
        "responses": {
          "200": {
            "description": "Index.html file is served"
          }
        }
      }
    },
    "/api/v1/auth/login": {
      "post": {
        "summary": "Login eines Benutzers",
        "description": "Authentifiziert einen Benutzer mit Benutzername und Passwort.",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/LoginData"
              }
            }
          },
          "description": "Anforderungsbody mit den Anmeldedaten des Benutzers."
        },
        "responses": {
          "200": {
            "description": "Anmeldung erfolgreich",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": {
                      "type": "boolean",
                      "description": "Kennzeichnet, ob die Anmeldung erfolgreich war."
                    },
                    "data": {
                      "$ref": "#/components/schemas/Person"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Ungültige Anforderungsdaten: Fehler im JSON-Format oder fehlende Eigenschaften."
          },
          "401": {
            "description": "Anmeldung fehlgeschlagen: Ungültige Anmeldedaten."
          },
          "500": {
            "description": "Anmeldung fehlgeschlagen: Serverfehler."
          }
        }
      }
    },
    "/api/v1/diary/entries": {
      "post": {
        "summary": "Erstellt neuen Tagebucheintrag",
        "description": "Erstellt einen neuen Tagebucheintrag in der Datenbank.",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/ResourceData"
              }
            }
          },
          "description": "Anforderungsbody mit den Daten für den neuen Tagebucheintrag."
        },
        "responses": {
          "201": {
            "description": "Tagebucheintrag erfolgreich erstellt"
          },
          "400": {
            "description": "Fehlerhafte Anforderung: Ungültiges JSON-Format oder fehlende Eigenschaften."
          },
          "500": {
            "description": "Interner Serverfehler: Tagebucheintrag konnte nicht erstellt werden."
          }
        }
      }
    },
    "/api/v1/diary/entries/grouped-by-user": {
    "get": {
      "summary": "Abrufen von Tagebucheinträgen gruppiert nach Personen",
      "description": "Liefert alle Tagebucheinträge gruppiert nach der Person, die sie erstellt hat.",
      "responses": {
        "200": {
          "description": "Liste der Tagebucheinträge gruppiert nach Personen",
          "content": {
            "application/json": {
              "schema": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "username": {
                      "type": "string",
                      "description": "Benutzername der Person, die den Eintrag erstellt hat."
                    },
                    "eintraege": {
                      "type": "string",
                      "description": "JSON-String mit den zusammengefassten Tagebucheinträgen der Person."
                    }
                  }
                }
              }
            }
          }
        },
        "500": {
          "description": "Interner Serverfehler: Tagebucheinträge konnten nicht abgerufen werden."
        }
      }
    }
  },
    "/api/v1/diary/entries/grouped-by-date": {
      "get": {
        "summary": "Abrufen von Tagebucheinträgen gruppiert nach Datum",
        "description": "Liefert alle Tagebucheinträge gruppiert nach dem Erstellungsdatum.",
        "responses": {
          "200": {
            "description": "Liste der Tagebucheinträge gruppiert nach Datum",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "date": {
                        "type": "string",
                        "description": "Datum des Tagebucheintrags."
                      },
                      "eintraege": {
                        "type": "string",
                        "description": "JSON-String mit den zusammengefassten Tagebucheinträgen des Tages."
                      }
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Interner Serverfehler: Tagebucheinträge konnten nicht abgerufen werden."
          }
        }
      }
    }
},

  "components": {
    "schemas": {
      "ResourceData": {
        "type": "object",
        "properties": {
          "people": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "description": {
            "type": "string"
          },
          "notes": {
            "type": "string"
          },
          "date": {
            "type": "string",
            "format": "date"
          },
          "duration": {
            "type": "integer"
          }
        },
        "required": ["people", "description", "date", "duration"]
      },
      "LoginData": {
        "type": "object",
        "properties": {
          "username": {
            "type": "string"
          },
          "password": {
            "type": "string"
          }
        },
        "required": ["username", "password"]
      },
      "Person": {
        "type": "array",
        "properties": {
          "username": {
            "type": "string"
          },
          "firstname": {
            "type": "string"
          },
          "lastname": {
            "type": "string"
          },
          "teammember": {
            "type": "integer"
          }
        },
        "required": ["username", "firstname", "lastname", "teammember"]
      },
      "EntersData" : {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer"
          },
          "description": {
            "type": "string"
          },
          "notes": {
            "type": "string"
          },
          "date": {
            "type": "string",
            "format": "date"
          },
          "duration": {
            "type": "integer"
          }
        },
        "required": ["id", "description", "date", "duration"]
      },
      "EntryData" : {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer"
          },
          "username": {
            "type": "string"
          }
        },
        "required": ["id", "username"]
      }
    }
  }
}